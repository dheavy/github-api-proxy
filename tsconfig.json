{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/interfaces/*.ts",
      "node_modules",
      ".vscode",
      ".idea"
    ]
  }
